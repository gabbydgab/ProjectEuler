{
    "name": "gabbydgab/project-euler",
    "require": {
        "php": "~7.0.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.6.2",
        "sebastian/phpcpd": "^2.0.4",
        "phpunit/phpunit": "^5.6"        
    },
    "autoload": {
        "psr-4": {
            "ProjectEuler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProjectEulerTest\\": "test/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@debug"
        ],
        "debug": [
            "@cs",
            "@cpd",
            "@test"
        ],
        "cs": "phpcs --ignore=/vendor,/public src test",
        "cs-fix": "phpcbf --ignore=/vendor,/public src test",
        "cpd": "phpcpd --exclude=/vendor,/public --fuzzy src test",
        "test": "phpunit --verbose"
    }
}
